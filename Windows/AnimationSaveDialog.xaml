            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Content="Save 2147483647 Frames..." Grid.Row="1" Grid.Column="1" Click="Dialog_Finish" x:Name="saveButton" Margin="5,5,5,5" />
        </Grid>
    </Grid>
